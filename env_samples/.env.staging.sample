#########################################
# Staging Environment (.env.staging)
# -----------------------------------
# This file configures your staging environment.
# Use secure values, but do not use production credentials here.
#########################################

# Application Settings
APP_ENV=staging
APP_DEBUG=false            # Debugging should be disabled in staging
APP_URL=https://staging.example.com

# Database Settings (MySQL)
DB_CONNECTION=mysql
DB_HOST=staging-db.example.com   # Replace with actual staging DB host
DB_PORT=3306
DB_DATABASE=cf_staging
DB_USERNAME=cf_stage_user
DB_PASSWORD=${STAGING_DB_PASSWORD}   # Use environment-injected secret, not plain text

# Redis Settings (for session caching)
REDIS_HOST=staging-redis.example.com
REDIS_PORT=6379

# ColdFusion Administrator
CF_ADMIN_USER=admin
CF_ADMIN_PASSWORD=${STAGING_CF_ADMIN_PASSWORD}  # Inject from secrets manager
