#########################################
# Local Development Environment (.env.local)
# -----------------------------------------
# This file configures your local development environment.
# Replace placeholder values as needed.
#########################################

# Application Settings
APP_ENV=local              # Environment type (local, staging, production)
APP_DEBUG=true             # Enable debugging for local development
APP_URL=http://localhost:8080  # Base URL for local testing

# Database Settings (MySQL)
DB_CONNECTION=mysql        # Database driver type
DB_HOST=localhost          # Hostname for local DB (use 'db' if using Docker Compose)
DB_PORT=3306               # Default MySQL port
DB_DATABASE=cf_local       # Local database name
DB_USERNAME=cf_user        # Local DB username
DB_PASSWORD=cf_pass        # Local DB password (use a weak one locally if needed)

# Redis Settings (for session caching)
REDIS_HOST=localhost       # Redis server hostname (or 'redis' in Docker)
REDIS_PORT=6379            # Default Redis port

# ColdFusion Administrator
CF_ADMIN_USER=admin        # ColdFusion admin username (default: admin)
CF_ADMIN_PASSWORD=localpassword  # Local admin password (do not reuse in staging/prod)
